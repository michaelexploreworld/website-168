<div id="home-page-content">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menuList">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "168精彩我的世界", home_page_index_path, :class => "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="menuList">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to "#home-section" do %>
              <span class="glyphicon glyphicon-home"></span> 首頁
            <% end %>
          </li>
          <li>
            <%= link_to "#about-section" do %>
              <span class="glyphicon glyphicon-user"></span> 關於
            <% end %>
          </li>
          <li>
            <%= link_to "#subwebsite-section" do %>
              <span class="glyphicon glyphicon-globe"></span> 網頁
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <section id="home-section" class="homeSlide">
    <div class="bcg vertical-center" data-center="background-position: 50% 0px;" data-top-bottom="background-position: 50% -100px;" data-anchor-target="#home-section">
      <div class="container" data-center="opacity: 1" data-50-top="opacity: 0" data-anchor-target="#search-box">
        <div class="row">
          <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3">
            <div id="search-box">
              <%= form_tag(home_page_search_websites_path, remote: true, method: :get) do %>
              <div class="input-group input-group-lg">
                <%= text_field_tag :term, params[:term], class: "form-control", placeholder: "輸入查詢關鍵字..."%>
                <span class="input-group-btn">
                  <button class="btn btn-default" type="submit">
                    <span class="glyphicon glyphicon-search"></span>
                  </button>
                </span>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="about-section" class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h2>關於168集團</h2>
        <p>文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字</p>
      </div>
    </div>
  </section>

  <section id="website-category">
    <div class="bcg vertical-center" data-anchor-target="#website-category">
      <div class="container text-center" data-anchor-target="#website-category h1">
        <div class="row">
          <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3">
            <h1>網站</h1>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="subwebsite-section" class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h2 id="websiteHeader">168集團</h2>
        <hr id="line-seperator">
      </div>
    </div>

    <div class="row">
      <div id="websites_container" class="container">
        <%= render :partial =>"website_item_list" %>
      </div>
    </div>
  </section>

  <footer id="footer">
    <div class="bcg vertical-center">
      <div class="container text-center">
        <div class="row">
          <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3"></div>
        </div>
      </div>
    </div>
  </footer>

